@{
    ViewData["Title"] = "Article Name";
    ViewBag.MetaDescription = "Home Page Description";
    ViewBag.MetaDate = "2020-09-17";
}

<section class="section">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12 text-center">
				<div class="h1">🔥</div>
				<h1 class="display-1 mt-4">@ViewData["Title"].</h1>
				<div class="max-width mx-auto mt-4">
					<div class=""><text><b>@ViewBag.MetaDate</b> by <a href="https://www.instagram.com/brandflex.co/" target="_blank"><i class="fab fa-instagram"></i> Brandflex</a></text></div>
				</div>
				<div class="mt-3">
                	<div class="addthis_inline_share_toolbox"></div>
				</div>
			</div>
		</div>
	</div>
</section>

<section class="section pt-0">
	<div class="container">
	
	    <div class="row">
            <div class="col-lg-10 col-md-12 mx-auto text-center">
                <img src="~/images/blog/blog.jpg" class="img-fluid parallax">
            </div>
        </div>
	
	    <div class="row justify-content-center mt-4">
	        <div class="col-lg-8 col-md-10 col-xs-12">
	            <p class="lead">Lead</p>
	            <p>Copy</p>
	        </div>
	    </div>
	</div>
</section>

