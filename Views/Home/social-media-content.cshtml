	<script src="~/vendors/parallax/parallax.js"></script>
	<script>
		var sceneI = document.getElementById('sceneI');
		var parallax = new Parallax(sceneI);
		
		var sceneII = document.getElementById('sceneII');
		var parallax = new Parallax(sceneII);
		
		var sceneIII = document.getElementById('sceneIII');
		var parallax = new Parallax(sceneIII);
		
		var sceneIII = document.getElementById('sceneIV');
		var parallax = new Parallax(sceneIV);	
