<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Brandflex</title>
    
    @if (!string.IsNullOrEmpty(ViewBag.MetaDescription))
    {
        <meta name="description" content="@ViewBag.MetaDescription">
    }
    else
    {
        <meta name="description" content="UX Storyteller, Content Creation and Digital Product Design">
    }
    
    <!-- Meta -->
    <partial name="Meta" />
    
    <!-- Favs -->
    <partial name="Favicon" />
    
    <!-- Vendor Styles -->

    
    <!-- FontAwesome -->
    <script src="https://kit.fontawesome.com/d09827220c.js" crossorigin="anonymous"></script>
    
	<!-- Core Style -->
    <link rel="stylesheet" href="~/css/brandflex.css" />
    
</head>
<body>
	
	<partial name="Navigation" />
    
    <div class="frame top"></div>
    <div class="frame right"></div>
    <div class="frame bottom"></div>
    <div class="frame left"></div>
    
    @RenderBody()

    
    <!-- Core Scripts -->
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    
    <!-- Vendor Scripts -->
    
    <!-- Site Scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Page Modals -->
    @RenderSection("Modals", required: false)

	<!-- Page Scripts -->
    @RenderSection("Scripts", required: false)
</body>
</html>
